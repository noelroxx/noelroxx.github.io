@import url("http://fonts.googleapis.com/css?family=Open+Sans:700,800,400,300")
  
/* Layout */
*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

html, body
  height: 100%

body
  font-family: 'Open Sans', sans-serif
  margin: 0
  color: #333
  background-image: url('bg.jpg')
  background-size: cover
  background-position: center
  padding-top: 50px

.profile
  padding: 100px 0
  text-align: center
  max-width: 720px
  background: white
  opacity: 0.9
  margin: 0 auto

.profile-img 
  background-image: url("avatar.jpg")
  background-size: cover
  width: 6rem
  height: 6rem
  margin: 0 auto
  border-radius: 100%
  
.profile-name
  font-weight: 800
  font-size: 48px
  margin-bottom: 0
  
.profile-title
  font-weight: 400
  font-size: 28px
  color: #ccc
  
.profile-text
  max-width: 640px
  margin: auto
  margin-top: 10px
  font-size: 1.25em
  font-weight: 400
  
.profile-link b a
  color: #4d90fe
  
